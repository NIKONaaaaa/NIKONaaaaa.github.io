@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6"><h2 class="text-primary">Product List</h2></div>
        <div class="col-6">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-4">
            <h6 class="text-primary">Showing 1 - 30 of results</h6>
        </div>
        <div class="col-4"></div>
        <div class="col-4">
            <h6 class="text-primary">Page 1 2 ></h6>
        </div>
    </div>
    <table>
        <tbody>
            <tr>
                @foreach (var obj in Model.OrderBy(u => u.ProductBrand))
                {
                    <td>
                        @obj.Id
                        <br />
                        @obj.ProductType
                        <br />
                        @obj.ProductBrand
                        <br />
                    </td>
                }
            </tr>
        </tbody>
    </table>
</div>